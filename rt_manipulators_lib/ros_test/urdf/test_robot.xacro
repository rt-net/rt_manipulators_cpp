<?xml version="1.0"?>
<robot name="bonobo" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="default_link" params="name">
    <link name="${name}">
      <visual>
        <geometry>
          <box size="0.1 0.1 0.1"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <box size="0.1 0.1 0.1"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <inertia ixx="0.1667e-02" ixy="0.0" ixz="0.0" iyy="0.1667e-02" iyz="0.0" izz="0.1667e-02" />
        <mass value="1.0"/>
      </inertial>
    </link>
  </xacro:macro>

  <xacro:macro name="default_joint" params="name type parent child *origin *axis">
    <joint name="${name}" type="${type}">
        <parent link="${parent}" />
        <child link="${child}" />
        <xacro:insert_block name="origin" />
        <xacro:insert_block name="axis" />
        <limit 
          lower="${radians(-180)}" 
          upper="${radians(180)}" 
          effort="1.0" 
          velocity="1.0"/>
        <dynamics damping="1.0e-6" friction="0.8"/>
    </joint>
  </xacro:macro>

  <xacro:default_link name="base_link"/>
  <xacro:default_joint 
    name="r_leg_joint1"
    type="revolute"
    parent="base_link"
    child="r_leg_link1">
    <origin xyz="0 -0.5 -0.5" rpy="0 0 0" />
    <axis xyz="0 1 0"/>
  </xacro:default_joint>
  <xacro:default_link name="r_leg_link1"/>

  <xacro:default_joint 
    name="r_leg_joint2"
    type="revolute"
    parent="r_leg_link1"
    child="r_leg_link2">
    <origin xyz="0 0 -0.5" rpy="0 0 0" />
    <axis xyz="0 0 1"/>
  </xacro:default_joint>
  <xacro:default_link name="r_leg_link2"/>

  <xacro:default_joint 
    name="l_leg_joint1"
    type="revolute"
    parent="base_link"
    child="l_leg_link1">
    <origin xyz="0 0.5 -0.5" rpy="0 0 0" />
    <axis xyz="0 1 0"/>
  </xacro:default_joint>
  <xacro:default_link name="l_leg_link1"/>

  <xacro:default_joint 
    name="l_leg_joint2"
    type="revolute"
    parent="l_leg_link1"
    child="l_leg_link2">
    <origin xyz="0 0 -0.5" rpy="0 0 0" />
    <axis xyz="0 0 1"/>
  </xacro:default_joint>
  <xacro:default_link name="l_leg_link2"/>

  <xacro:default_joint 
    name="body_joint"
    type="fixed"
    parent="base_link"
    child="body_link">
    <origin xyz="0 0 0.5" rpy="0 0 0" />
    <axis xyz="0 0 0"/>
  </xacro:default_joint>
  <xacro:default_link name="body_link"/>

  <xacro:default_joint 
    name="r_arm_joint1"
    type="revolute"
    parent="body_link"
    child="r_arm_link1">
    <origin xyz="0 -0.5 0" rpy="0 0 0" />
    <axis xyz="1 0 0"/>
  </xacro:default_joint>
  <xacro:default_link name="r_arm_link1"/>

  <xacro:default_joint 
    name="r_arm_joint2"
    type="revolute"
    parent="r_arm_link1"
    child="r_arm_link2">
    <origin xyz="0 0 -0.5" rpy="0 0 0" />
    <axis xyz="0 1 0"/>
  </xacro:default_joint>
  <xacro:default_link name="r_arm_link2"/>

  <xacro:default_joint 
    name="l_arm_joint1"
    type="revolute"
    parent="body_link"
    child="l_arm_link1">
    <origin xyz="0 0.5 0" rpy="0 0 0" />
    <axis xyz="1 0 0"/>
  </xacro:default_joint>
  <xacro:default_link name="l_arm_link1"/>

  <xacro:default_joint 
    name="l_arm_joint2"
    type="revolute"
    parent="l_arm_link1"
    child="l_arm_link2">
    <origin xyz="0 0 -0.5" rpy="0 0 0" />
    <axis xyz="0 1 0"/>
  </xacro:default_joint>
  <xacro:default_link name="l_arm_link2"/>

  <xacro:default_joint 
    name="head_joint1"
    type="revolute"
    parent="body_link"
    child="head_link">
    <origin xyz="0.5 0 0.5" rpy="0 0 0" />
    <axis xyz="0 0 1"/>
  </xacro:default_joint>
  <xacro:default_link name="head_link"/>
</robot>
